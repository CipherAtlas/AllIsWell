{
  "name": "all-is-well",
  "version": "3.0.0",
  "description": "Simple peer-to-peer wellness check-in app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "serve": "concurrently \"cross-env PORT=3000 node server.js\" \"cross-env PORT=3001 node server.js\" --names \"SERVER1,SERVER2\" --prefix-colors \"blue,green\"",
    "build": "echo 'No build step needed'",
    "test": "echo 'No tests configured'",
    "cap:add": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open": "npx cap open android",
    "cap:build": "cd android && ./gradlew assembleDebug",
    "cap:assets": "node generate-assets.js"
  },
  "keywords": [
    "wellness",
    "check-in",
    "pwa",
    "peer-to-peer",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "redis": "^4.6.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "socket.io-client": "^4.8.3"
  }
}
